<%= stylesheet_link_tag 'organizations' %>
<p id="notice"><%= notice %></p>

<h1>Organizations</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Website</th>
      <th>Mission</th>
      <th>Memberlink</th>
      <th>City</th>
      <th>Issues</th>
      <th>Gender</th>
      <th>Race</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @organizations.each do |organization| %>
      <tr>
        <td><%= organization.name %></td>
        <td><a href="<%= organization.website %>"><%= organization.website %></a></td>
        <td><%= organization.mission %></td>
        <td><a href="<%= organization.memberlink %>"><%= organization.memberlink %></a></td>
        <td><a target="_blank" href="https://www.google.com/maps/place/<%= organization.city %>, AZ"><%= organization.city + ", " + "AZ" %></a></td>
        <td><%= organization.issues %></td>
        <td><%= organization.gender %></td>
        <td><%= organization.race %></td>
        <td><%= link_to 'Show', organization %></td>
        <td><%= link_to 'Edit', edit_organization_path(organization) %></td>
        <td><%= link_to 'Destroy', organization, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Do you host an organization?', new_organization_path %>
<%= link_to 'Back', root_path %>
